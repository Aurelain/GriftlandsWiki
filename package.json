{
    "name": "griftlandswiki",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "axios": "^0.21.1",
        "fs-extra": "^10.0.0"
    },
    "scripts": {
        "download": "node -e \"require('./scripts/downloadFiles.js')()\"",
        "pull": "node -e \"require('./scripts/pullFromWeb.js')()\"",
        "push": "node -e \"require('./scripts/pushToWeb.js')()\"",
        "update": "node -e \"require('./scripts/updateFromGame.js')()\""
    },
    "devDependencies": {
        "prettier": "^2.3.1",
        "eslint": "^7.25.0"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "rules": {
            "max-len": [
                "warn",
                {
                    "code": 120
                }
            ],
            "quotes": [
                "warn",
                "single",
                "avoid-escape"
            ]
        }
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "printWidth": 120,
        "bracketSpacing": false
    }
}
