/* For elements which only display in the mobile view */
.mobileonly {
    display: none;
}

/* The following section is necessary for most of the Notice templates */
/* for "edit this page" tab and "discussion" tab etc */
.pagetab {
     border-style: solid solid none;
     border-width: thin;
     border-color: var(--theme-border-color);
     padding: 0.25em 1em 0;
     font-size: 95%;
}

.ambox {
    background-color: var(--theme-page-text-mix-color-95);
    border-bottom-color: var(--theme-link-dynamic-color-2);
    border-right-color: var(--theme-link-dynamic-color-2);
    border-top-color: var(--theme-link-dynamic-color-2);
    border-collapse: collapse;
    font-size: 95%;
    margin: 0 auto 2px auto;
    width: 80%;
}

.ambox-gray {
    border-left-color: #383838;
}

.ambox.ambox-tiny {
    font-size: 90%;
    margin: 2px 0;
    width: auto;
}

.ambox + .ambox {
     margin-top: -2px;
}

.ambox-text {
     padding: 0.25em 0.5em;
}

.ambox-image {
     padding: 2px 0px 2px 0.5em;
     text-align: center;
     width: 60px;
}

.ambox-tiny .ambox-image {
     padding: 2px 0.5em;
     text-align: left;
     width: auto;
}

/* Ambox colors */
.ambox-blue {
     border-left: 10px solid #1e90ff;
}

.ambox-red {
     border-left: 10px solid #b22222;
}

.ambox-orange {
     border-left: 10px solid #f28500;
}

.ambox-yellow {
     border-left: 10px solid #f4c430;
}

.ambox-purple {
     border-left: 10px solid #9932cc;
}

.ambox-gray {
     border-left: 10px solid #bba;
}

.ambox-green {
     border-left: 10px solid #228b22;
}

/* Ambox small text */
.amsmalltext {
     font-size: smaller;
     margin-left: 0.8em;
     margin-top: 0.5em;
}

/* INFOBOXES: game or book depended color style */
.infoboxtable {
    background-image: url(https://static.wikia.nocookie.net/griftlands_gamepedia_en/images/9/91/IBbg.png/revision/latest?cb=20200919191628);
    border: 2px solid;
    border-top-color: #08e0db;
    border-bottom-color: #08e0db;
    border-left-color: transparent;
    border-right-color: transparent;
    border-radius:5px;
    color: #08e0db;
    float: right;
    font-size: 89%; 
    margin-bottom: 0.5em; 
    margin-left: 1em; 
    padding: 0.2em; 
    width: 300px;
}

.infoboxtable td {
    vertical-align: top;
}

.infoboxtable td > div {
    background-color: rgba(87, 255, 251,0.3); 
    border: 2px solid inherit; 
    border-radius: 5px; 
    font-weight: bold;
    padding: 0.5px 7px;
    text-align: right;
    color: #ffffff;
}

.infoboxname {
    background: radial-gradient(circle at 145px 10px, rgba(87, 255, 251,0.4), transparent); 
    color: #ffffff;
    font-size: 110%; 
    font-weight: bold;
    padding: 0.5em; 
}

.infoboxdetails {
    padding: 0em;
    background: radial-gradient(circle at 145px 10px, rgba(87, 255, 251,0.4), transparent); 
}

.infoboxover {
     background-color: rgba(87,255,251,0.4);
     border-top-color: transparent;
     border-bottom-color: transparent;
     border-left-color: #57FFFB;
     border-right-color: transparent;
     padding: 5px;
     color: #57FFFB;
     text-transform: uppercase;
     border: 2px solid #57FFFB;
     border-bottom: 0;
     border-top: 0;
     border-right: 0;
}
