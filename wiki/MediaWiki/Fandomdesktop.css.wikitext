    text-align: center;
    font-family: "OpenSans-Bold";
    background-color: transparent;
}

.fpbox .heading {
    text-shadow:1px  1px 1px black,
                1px -1px 1px black,
               -1px  1px 1px black,
               -1px -1px 1px black;
